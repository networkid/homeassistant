esphomeyaml:
  name: teckin01
  platform: ESP8266
  board: esp8285

wifi:
  ssid: 
  password: 
  manual_ip:
    # Set this to the IP of the ESP
    static_ip: 192.168.0.0
    # Set this to the IP address of the router. Often ends with .1
    gateway: 192.168.0.1
    # The subnet of the network. 255.255.255.0 works for most home networks.
    subnet: 255.255.255.0
# Enable logging
logger:

# Enable Home Assistant API
api:
  password: 

ota:
  password: 
time:
  - platform: homeassistant
    id: homeassistant_time
    
binary_sensor:
  - platform: gpio
    pin:
      number: GPIO13
      inverted: True
    name: "teckin01_button"
    on_press:
      then:
        - switch.toggle: teckin01
        - switch.toggle: teckin01led
    
switch:
- platform: gpio
  name: "Teckin01_Relay"
  pin: GPIO15
  restore_mode: ALWAYS_ON
  id: teckin01
- platform: gpio
  name: "Teckin01_LED_Blue"
  pin: GPIO2
  inverted: True
  restore_mode: ALWAYS_OFF
  id: teckin01led
sensor:
  - platform: hlw8012
    sel_pin:
      number: GPIO16
      inverted: True
    cf_pin: GPIO05
    cf1_pin: GPIO14
    # Higher value gives lower watt readout
    current_resistor: 0.00239
    # Lower value gives lower voltage readout
    voltage_divider: 915
    current:
      name: "Teckin01_Amperage"
      unit_of_measurement: A
    voltage:
      name: "Teckin01_Voltage"
      unit_of_measurement: V
    power:
      name: "Teckin01_Wattage"
      unit_of_measurement: W
      id: "Teckin01_Wattage"
    change_mode_every: 8
    update_interval: 10s
  # - platform: total_daily_energy
  #   name: "Teckin01_Total Daily Energy"
  #   power_id: "energy_temp_Wattage"
  #   filters:
  #       # Multiplication factor from W to kW is 0.001
  #       - multiply: 0.001
  #   unit_of_measurement: kWh
      
# Extra sensor to keep track of plug uptime
  - platform: uptime
    name: energy_temp_Uptime Sensor
